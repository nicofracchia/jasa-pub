{% extends 'generales/baseSistema.html.twig' %}

{% block title %} - Reportes{% endblock %}

{% block rutas %}Reportes - <span>Ventas por medio de pago</span>{% endblock %}

{% block contenido %}
    <h1>Reporte medios de pago</h1>

    {{ include('reportes/_scripts.html.twig') }}

    <div class="contenedorReportes">
        <div class="tablaReportes">
            <table>
                <tr>
                    <th class='alIzq'>Medio de pago</th>
                    <th class='alDer'>Monto total</th>
                </tr>
                {% for t in tabla %}
                    <tr>
                        <td class='alIzq'>{{t.nombre}}</td>
                        <td class='alDer'>${{t.total|number_format(0, ',', '.')}}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
        
        <div class="graficoReportes" id="grafico"></div>

    </div>

    {{ include('reportes/_barras.html.twig', {
        'titulo': 'Medios de pago',
        'subtitulo': '',
        'ejeY': 'Medio de pago (%)',
        'categorias': "''",
        'series': dataGrafico,
        'simboloPaintFormat': '$'
    }) }}

{% endblock %}